                crossorigin="anonymous"></script>
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <title><%= title %></title>
    </head>
    <body>
        <div id="main-content">
            <p>Ime:</p>
            <input type="text" name="user" id="user" autofocus=""><br>
            <p>Geslo:</p>
            <input type="password" name="password" id="password"><br>
            <br>
            <div id="res"><%= response %></div>
            <br>
            <form>
                <div id="send"><input type="button" name="send" value="Send"></div>
            </form>
        </div>
    </body>
</html>

<script>
    $("#send").click(function() {
        if (!$("#user").val() || !$("#password").val()) {
            $("#res").html("Vpi≈°i vse podatke");
        } else {
            $("#res").html("");
            user=$("#user").val();
            pass=$("#password").val();
            $.post("/log",
                {user: user,
                    password: pass
                },
                function(data){
            });
            location.reload();
        }
    });
</script>
